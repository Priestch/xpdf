      "priority": "high",
      "features": ["xref-stream"]
    },
    {
      "id": "linearized-load",
      "file": "pdfs/linearized.pdf",
      "type": "load",
      "description": "Linearized PDF for progressive display",
      "pages": 1,
      "priority": "high",
      "features": ["linearized"]
    },
    {
      "id": "compressed-object-stream-load",
      "file": "pdfs/compressed-object-stream.pdf",
      "type": "load",
      "description": "PDF with compressed object streams",
      "pages": 1,
      "priority": "high",
      "features": ["object-stream", "flate"]
    },
    {
      "id": "multiple-xref-load",
      "file": "pdfs/issue3115.pdf",
      "type": "load",
      "description": "PDF with multiple cross-reference sections (incremental updates)",
