{
  "version": "1.0",
  "description": "Test manifest for PDF-X. Based on PDF.js testing approach.",
  "tests": [
    {
      "id": "basicapi-load",
      "file": "pdfs/basicapi.pdf",
      "type": "load",
      "description": "Basic PDF document loading and parsing",
      "pages": 3,
      "priority": "critical"
    },
    {
      "id": "tracemonkey-load",
      "file": "pdfs/tracemonkey.pdf",
      "type": "load",
      "description": "Complex document with multiple fonts and images",
      "pages": 14,
      "priority": "high"
    },
    {
      "id": "empty-load",
      "file": "pdfs/empty.pdf",
      "type": "load",
      "description": "Empty PDF document with no pages",
      "pages": 0,
      "priority": "critical"
    },
    {
      "id": "xref-stream-load",
      "file": "pdfs/xref-stream.pdf",
      "type": "load",
      "description": "PDF with cross-reference stream (PDF 1.5+)",
