      "features": ["incremental-update"]
    },
    {
      "id": "asciihex-decode",
      "file": "pdfs/asciihexdecode.pdf",
      "type": "decode",
      "description": "PDF with ASCIIHexDecode filter",
      "pages": 1,
      "priority": "medium",
      "features": ["asciihex-decode"]
    },
    {
      "id": "flate-decode",
      "file": "pdfs/flatedecode.pdf",
      "type": "decode",
      "description": "PDF with FlateDecode compression",
      "pages": 1,
      "priority": "high",
      "features": ["flate"]
    },
    {
      "id": "simpletype3-font",
      "file": "pdfs/simpletype3font.pdf",
      "type": "font",
      "description": "Simple Type 3 font",
      "pages": 1,
      "priority": "low",
      "features": ["type3-font"]
    },
    {
      "id": "truetype-without-cmap",
      "file": "pdfs/TrueType_without_cmap.pdf",
      "type": "font",
      "description": "TrueType font without cmap",
      "pages": 1,
      "priority": "low",
      "features": ["truetype-font"]
    },
    {
      "id": "progressive-large-doc",
      "file": "pdfs/large-document.pdf.link",
      "type": "progressive",
      "description": "Large document for testing progressive loading",
      "pages": 100,
      "priority": "critical",
      "features": ["progressive-loading"],
      "link": true
    },
    {
      "id": "annotation-text",
      "file": "pdfs/annotation-text.pdf",
      "type": "annotation",
      "description": "PDF with text annotations",
      "pages": 1,
      "priority": "low",
      "features": ["annotations"]
    },
    {
      "id": "malformed-xref",
      "file": "pdfs/bad-xref.pdf",
      "type": "error-recovery",
      "description": "PDF with malformed cross-reference table",
      "pages": 1,
      "priority": "medium",
      "features": ["error-recovery"]
    },
    {
      "id": "rotation-test",
      "file": "pdfs/rotation.pdf",
      "type": "structure",
      "description": "PDF with rotated pages",
      "pages": 4,
      "priority": "medium",
      "features": ["rotation"]
    }
